                        <h2><i>￥</i><b>185.00</b><span>月销18252笔</span></h2>
                    </div>
                </a>
            </li>*@

        </ul>
    </div>

    <script>
    $(".search_list ul li a img").each(function(){
        var w = $(this).width();
        $(this).height(w+"px");
    })

    </script>


</body>

</html>
