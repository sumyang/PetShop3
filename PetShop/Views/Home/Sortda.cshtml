
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Sortda</title>
    <link href="~/Scripts/css/Cbase.css" rel="stylesheet" />
    <link href="~/Scripts/css/index.css" rel="stylesheet" />
    <link href="~/Scripts/css/swiper.min.css" rel="stylesheet" />
    <script src="~/Scripts/js/jquery-1.7.2.min.js"></script>
